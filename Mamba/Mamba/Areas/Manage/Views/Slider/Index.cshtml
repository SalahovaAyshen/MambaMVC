@model ICollection<Slider>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sliders</h4>
            <a asp-controller="slider" asp-action="create" class=" btn btn-inverse-primary btn-fw">Create Slider</a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Order
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:150px;height:150px" src="~/assets/img/slide/@item.ImageUrl"></img>
                                </td>

                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Order
                                </td>
                                <td>
                                    <a asp-controller="slider" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning btn-rounded btn-fw btn-info"><i class="mdi mdi-pencil"></i></a>
                                    <a asp-controller="slider" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-rounded btn-fw btn-info"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>